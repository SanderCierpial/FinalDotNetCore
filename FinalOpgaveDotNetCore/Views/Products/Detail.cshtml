@model Model.Product;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<style>
    .bikecenter {
        vertical-align: middle;
    }
</style>
<section class="text-center">
    <div class="container">
        <h1>@Model.Name Detail</h1>
    </div>
</section>
<div class="container-fluid">
    <div class="row  justify-content-md-center" width="20">
        <div class="col-sm-6 col-md-4 col-lg-3 mb-3">
            <div class="card align-items-center">
                <img class="card-img-top" src="@ViewData[(Model.Id).ToString()]">
                <form asp-controller="Products" asp-action="ShoppingBag" asp-route-id="@Model.Id" method="post">
                    <input type="text" id="quantity" placeholder="How many?" name="quantity" />
                    <input class="btn btn-success" type="submit" value="Buy" />
                </form>
            </div>
        </div>
    </div>
    </div>