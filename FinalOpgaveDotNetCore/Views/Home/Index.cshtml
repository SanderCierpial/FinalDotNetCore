@model List<Model.Customer>;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "BikeShop";
    Layout = "~/Views/Shared/Layout.cshtml";
}

    <style>
       .banner {
        top: 0;
        height: auto;
        background-position: center;
        background-repeat: no-repeat;
        max-width: 100% 100% !important;
        width: 100%;
        position: fixed;
        left: 0;
        }
        .centered {
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          font-size:8vw;
          color:white;
          text-shadow:
		-1px -1px 0 #000,
		1px -1px 0 #000,
		-1px 1px 0 #000,
		1px 1px 0 #000;
        }
    </style>
    <a asp-controller="Products" asp-action="Index">
        <div asp-controller="Products" asp-action="Index">  
            <img class="banner" src="@ViewData["bike"]" alt="Alternate Text" />
            <div class="centered" unselectable="on">Bike Shop</div>
        </div>
    </a>